# backend/.env
# ========================================
# RAILWAY POSTGRESQL DATABASE
# ========================================
# Skopiuj z Railway Dashboard > PostgreSQL > Connect
# Format: postgresql+asyncpg://user:password@host:port/dbname

DATABASE_URL=postgresql+asyncpg://postgres:PASSWORD@containers-us-west-123.railway.app:6543/railway

# ========================================
# SUPABASE (opcjonalne - jeśli używasz)
# ========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key-here

# ========================================
# OLLAMA
# ========================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# ========================================
# CLAUDE (opcjonalne - dla advanced features)
# ========================================
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ========================================
# APP CONFIG
# ========================================
SECRET_KEY=your-secret-key-min-32-chars-use-openssl-rand-hex-32
ENVIRONMENT=production
DEBUG=False

# ========================================
# SENTRY (monitoring)
# ========================================
SENTRY_DSN=https://your-dsn@sentry.io/project-id

# ========================================
# REDIS (caching - opcjonalne)
# ========================================
REDIS_URL=redis://localhost:6379/0

# ========================================
# FEATURE FLAGS
# ========================================
USE_MULTI_AGENT=True
USE_RAG_CONTEXT=True
USE_KAIZEN_LEARNING=True
ENABLE_FALLBACK=True
